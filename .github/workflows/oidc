name: CI-CD

on: [push]

jobs:
  deploy:
    runs-on: ubuntu-latest
    permissions:
      id-token: write
      contents: read

    steps:
    - uses: aws-actions/configure-aws-credentials@v4
      with:
        role-to-assume: arn:aws:iam::792306802366:role/GitHub-CICD-Role
        aws-region: us-east-1

    - run: aws sts get-caller-identity
